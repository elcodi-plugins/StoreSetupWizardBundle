<div id="step1" class="grid welcome mb-n">
    <div class="col-1-4">
        <div class="pv-m welcome-item{% if activeStep == 1 %} welcome-active{% endif %}{% if stepsFinished[1] %} welcome-done{% endif %}">
            <h5>
                {% if stepsFinished[1] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>1.</span>
                {% endif %}
                Setup your address
            </h5>
            <p class="mb-n"><a href="{# url('admin_address_new') #}" class="button">Add an address</a></p>
            <p class="fz-s">Estimated time 3 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="pv-m welcome-item{% if activeStep == 2 %} welcome-active{% endif %}{% if stepsFinished[2] %} welcome-done{% endif %}">
            <h5>
                {% if stepsFinished[2] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>2.</span>
                {% endif %}
                Add some products
            </h5>
            <p class="mb-n"><a href="{{ url('admin_product_new') }}" class="button">Create my first product</a></p>
            <p class="fz-s">Estimated time 5 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="pv-m welcome-item{% if activeStep == 3 %} welcome-active{% endif %}{% if stepsFinished[3] %} welcome-done{% endif %}">
            <h5>
                {% if stepsFinished[3] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>3.</span>
                {% endif %}
                Setup the payments
            </h5>
            <p class="mb-n"><a href="{# url('admin_payment_edit') #}" class="button">Add payments methods</a></p>
            <p class="fz-s">Estimated time 3 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="pv-m welcome-item{% if activeStep == 4 %} welcome-active{% endif %}{% if stepsFinished[4] %} welcome-done{% endif %}">
            <h5>
                {% if stepsFinished[4] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>4.</span>
                {% endif %}
                Setup your shipping
            </h5>
            <p class="mb-n"><a href="{{ url('admin_carrier_new') }}" class="button">Add a carrier</a></p>
            <p class="fz-s">Estimated time 2 min</p>
        </div>
    </div>
</div>
