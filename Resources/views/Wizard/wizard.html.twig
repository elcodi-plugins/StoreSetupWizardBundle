            {% endif %}
            <p class="mb-n"><a href="{{ url('admin_address_edit') }}" class="button button-primary">{{ 'wizard.step2.action'|trans }}</a></p>
            <p class="fz-s">{% trans with {'%1': minutesStepTwo } %}wizard.estimated_time{% endtrans %}</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 3 %} welcome-active animated bounce{% endif %}{% if stepsFinished[3] %} welcome-done{% endif %}">
            {% if not isMiniWizard %}
                <i class="icon-credit-card"></i>
