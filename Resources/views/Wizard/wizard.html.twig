            {% endif %}
            <p class="mb-n"><a href="{{ url('admin_payment_configuration_list') }}" class="button button-primary">{{ 'wizard.step3.action'|trans }}</a></p>
            <p class="fz-s">{% trans with {'%1': minutesStepThree } %}wizard.estimated_time{% endtrans %}</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 4 %} welcome-active animated bounce{% endif %}{% if stepsFinished[4] %} welcome-done{% endif %}">
            {% if not isMiniWizard %}
                <i class="icon-truck"></i>
