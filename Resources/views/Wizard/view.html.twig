{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}Welcome!{% endblock content_title %}

{% block breadcrumb %}<h1>Welcome!</h1>{% endblock %}

{% block body_top_hook '' %}

{% block content %}

<div id="step1" class="grid welcome">
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 1 %} welcome-active{% endif %}{% if stepsFinished[1] %} welcome-done{% endif %}">
            <i class="icon-map-marker"></i>
            <span class="welcome-done-sign">Done!</span>
            <h5>
                {% if stepsFinished[1] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>1.</span>
                {% endif %}
                Setup your address
            </h5>
            <p>To be defined such a marketing text</p>
            <p class="mb-n"><a href="{# url('admin_address_new') #}" class="button">Add an address</a></p>
            <p class="fz-s">Estimated time 3 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 2 %} welcome-active{% endif %}{% if stepsFinished[2] %} welcome-done{% endif %}">
            <i class="icon-dropbox"></i>
            <span class="welcome-done-sign">Done!</span>
            <h5>
                {% if stepsFinished[2] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>2.</span>
                {% endif %}
                Add some products
            </h5>
            <p>The most important thing in your store after your clients. Let's add some products!</p>
            <p class="mb-n"><a href="{{ url('admin_product_new') }}" class="button">Create my first product</a></p>
            <p class="fz-s">Estimated time 5 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 3 %} welcome-active{% endif %}{% if stepsFinished[3] %} welcome-done{% endif %}">
            <i class="icon-credit-card"></i>
            <span class="welcome-done-sign">Done!</span>
            <h5>
                {% if stepsFinished[3] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>3.</span>
                {% endif %}
                Setup the payments
            </h5>
            <p>There are several ways to pay for your customers, setup more convenients for you.</p>
            <p class="mb-n"><a href="{# url('admin_payment_edit') #}" class="button">Add payments methods</a></p>
            <p class="fz-s">Estimated time 3 min</p>
        </div>
    </div>
    <div class="col-1-4">
        <div class="welcome-item{% if activeStep == 4 %} welcome-active{% endif %}{% if stepsFinished[4] %} welcome-done{% endif %}">
            <i class="icon-truck"></i>
            <span class="welcome-done-sign">Done!</span>
            <h5>
                {% if stepsFinished[4] %}
                    <span class="icon-check"></span>
                {% else %}
                    <span>4.</span>
                {% endif %}
                Setup your shipping
            </h5>
            <p>To be defined such a marketing text.</p>
            <p class="mb-n"><a href="{{ url('admin_carrier_new') }}" class="button">Add a carrier</a></p>
            <p class="fz-s">Estimated time 2 min</p>
        </div>
    </div>
</div>

{% endblock content %}
